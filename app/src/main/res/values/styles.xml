<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.EditTextStyle" parent="Widget.AppCompat.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_background_edittext_textview</item>
    </style>

    <style name="Base.TextViewStyle" parent="Widget.AppCompat.TextView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_background_edittext_textview</item>
    </style>

</resources>