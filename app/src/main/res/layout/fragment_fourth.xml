<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fourth_fragment"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.FourthFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/registration"
        android:textColor="@color/orange_200"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/textView_data"
        style="@style/Base.TextViewStyle"
        android:text="@string/data"
        android:paddingStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_name"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_surname"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_age"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_gender"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_placeOfStudy"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <TextView
        android:id="@+id/textView_placeOfWork"
        style="@style/Base.TextViewStyle"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="56dp"
        android:paddingVertical="14dp" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orange"
        android:paddingVertical="15dp"
        android:text="@string/registration"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

</LinearLayout>